<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BasicScreenRecorder"
        Width="400"
        Height="400"
        WindowStartupLocation="CenterScreen"
        x:Class="BasicScreenRecorder.MainWindow">

    <Window.Styles>
        <StyleInclude Source="/Styles/RecordButton.axaml" />
    </Window.Styles>

    <Grid x:Name="MainGrid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="StartRecordingButton" Content="Start Recording" Classes="RecordButton" Click="StartRecordingButton_OnClick" />
            <Button x:Name="StopRecordingButton" Content="Stop Recording" Classes="RecordButton" Click="StopRecordingButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>